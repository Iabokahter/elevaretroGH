	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Authenticate User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"call\",\n    \"params\": {\n        \"db\": \"Training\",\n        \"login\": \"test@test.com\",\n        \"password\": \"123\"\n    },\n    \"id\": 1\n}"
						},
						"url": {
							"raw": "https://elevaretro.imconsultjo.com/web/session/authenticate",
							"protocol": "https",
							"host": [
								"elevaretro",
								"imconsultjo",
								"com"
							],
							"path": [
								"web",
								"session",
								"authenticate"
							]
						},
						"description": "Authenticate user and get session ID for subsequent API calls"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for Odoo 16"
		},
        {
            "name": "Contact Us Integration",
            "item": [
                {
                    "name": "Submit Contact Form",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "session_id",
                                "value": "{{session_id}}"
                            },
                            {
                                "key": "Cookie",
                                "value": "session_id={{session_id}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"call\",\n    \"params\": {\n        \"service\": \"object\",\n        \"method\": \"execute_kw\",\n        \"args\": [\n            \"Training\",\n            {{uid}},\n            \"{{password}}\",\n            \"crm.lead\",\n            \"create\",\n            [{\n                \"name\": \"Contact Form - {{contact_name}}\",\n                \"email_from\": \"{{email}}\",\n                \"phone\": \"{{phone}}\",\n                \"description\": \"{{message}}\",\n                \"type\": \"lead\",\n                \"stage_id\": 1,\n                \"contact_name\": \"{{contact_name}}\",\n                \"partner_name\": \"{{company_name}}\"\n            }]\n        ],\n        \"kwargs\": {}\n    },\n    \"id\": 1\n}"
                        },
                        "url": {
                            "raw": "https://elevaretro.imconsultjo.com/jsonrpc",
                            "protocol": "https",
                            "host": [
                                "elevaretro",
                                "imconsultjo",
                                "com"
                            ],
                            "path": [
                                "jsonrpc"
                            ]
                        },
                        "description": "Submit contact form data and create a new CRM lead using the correct format"
                    },
                    "response": []
                }
            ],
            "description": "Contact form integration endpoints for website"
        }
